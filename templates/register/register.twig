{% extends "layout/layout.twig" %}

{% block css %}
    {% webpack_entry_css 'register/register' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'register/register' %}
{% endblock %}

{% block content %}

<div class="container d-flex justify-content-center align-items-center main">
    <div class="card col-md-6 px-3 py-3 main-content">
      
      <h1 class="h3 mb-3 text-bold text-uppercase font-weight-bold">Register</h1>
      
      <hr>
  
     
      <input type="text" placeholder="Enter firstname" id="firstname" required>
  
  
      
      <input type="text" placeholder="Enter lastname" id="lastname" required>
   
      

     
    <input type="text" placeholder="Enter Email" id="email" required>
  
    
      <input type="password" placeholder="Enter Password" id="password" required>
  
     
  
      <label>
        <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
      </label>
  
      <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>
    
      <div class="d-flex justify-content-center align-items-center mt-4">
        <button id="signupbtn">Sign Up</button>
      </div>
    

      <div class="d-flex justify-content-center align-items-center mt-4">
        <button  id="cancelbtn">Cancel</button>
    </div>
  
   
    </div>
  </div>
</div> 

{% endblock %}